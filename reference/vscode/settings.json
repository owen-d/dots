{
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.wordWrap": "on",
    "editor.formatOnSave": true,
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    "workbench.colorTheme": "Spacemacs - light",
    "vspacecode.bindingOverrides": [
        /* Other keys of note (likely I've overrdden them):
        c-l+J = toggle panel
        c-l+P = new problem
        c-l+n = (quickfix, showQuickFixes)
        c-l+s = peek definition
        ctrl-option = inlay hints
*/
        {
            "keys": [
                "m",
                "languageId:go",
                "g",
                "p"
            ],
            "name": "Goto definition overlay",
            "type": "command",
            "command": "editor.action.peekDefinition",
            "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
        },
        {
            "keys": [
                "m",
                "languageId:rust",
                "g",
                "p"
            ],
            "name": "Goto definition overlay",
            "type": "command",
            "command": "editor.action.peekDefinition",
            "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
        },
        {
            "keys": [
                "m",
                "languageId:go",
                "g",
                "f"
            ],
            "name": "hover definition",
            "type": "command",
            "command": "editor.action.showHover",
            "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
        },
        {
            "keys": [
                "m",
                "languageId:rust",
                "g",
                "f"
            ],
            "name": "hover definition",
            "type": "command",
            "command": "editor.action.showHover",
            "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
        },
        {
            "keys": [
                "m",
                "languageId:go",
                "g",
                "g"
            ],
            "name": "Goto definition buffer",
            "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor",
            "type": "command",
            "command": "editor.action.revealDefinition"
        },
        {
            "keys": [
                "m",
                "languageId:rust",
                "g",
                "g"
            ],
            "name": "Goto definition buffer",
            "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor",
            "type": "command",
            "command": "editor.action.revealDefinition"
        },
        {
            "keys": [
                "m",
                "languageId:go",
                "g",
                "G"
            ],
            "name": "Goto definition buffer",
            "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor",
            "type": "command",
            "command": "editor.action.revealDefinitionAside"
        },
        {
            "keys": [
                "m",
                "languageId:rust",
                "g",
                "G"
            ],
            "name": "Goto definition buffer",
            "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor",
            "type": "command",
            "command": "editor.action.revealDefinitionAside"
        },
        {
            // close test panel
            "keys": [
                "t",
                "x"
            ],
            "name": "toggle panel",
            "when": "editorTextFocus",
            "type": "command",
            "command": "workbench.action.togglePanel"
        },
        {
            // toggle side bar
            "keys": [
                "t",
                "s",
            ],
            "name": "toggle sidebar",
            "when": "editorTextFocus",
            "type": "command",
            "command": "workbench.action.toggleSidebarVisibility"
        },
    ],
    "explorer.confirmDragAndDrop": false,
    "[go]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        }
    },
    "go.formatTool": "goimports",
    "go.testFlags": [
        // "-race"
    ],
    "go.lintTool": "golangci-lint",
    "editor.inlineSuggest.enabled": true,
    "explorer.confirmDelete": false,
    "editor.renderWhitespace": "none",
    "go.toolsManagement.autoUpdate": true,
    "githubPullRequests.fileListLayout": "flat",
    "editor.tabSize": 2,
    "githubPullRequests.pullBranch": "never",
    "python.languageServer": "None",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript][javascript]": {
        "editor.acceptSuggestionOnCommitCharacter": false,
    },
}